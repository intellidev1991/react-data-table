{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src", "src/**/*.tsx?"],
  "exclude": ["node_modules", "example", "**/__tests__/*"]
}
